<domain type="kvm">
  <name>centos-slave-3</name>
  <memory>2097152</memory>
  <vcpu>2</vcpu>
  <os>
    <type arch="x86_64">hvm</type>
    <kernel>/var/lib/libvirt/boot/vmlinuz</kernel>
    <initrd>/var/lib/libvirt/boot/initrd.img</initrd>
	<cmdline>ks=http://192.168.99.89:8000/anaconda-ks.cfg</cmdline>
    <boot dev="cdrom"/>
  </os>
  <features>
    <acpi/>
    <apic/>
  </features>
  <clock offset="utc"/>
  <on_reboot>destroy</on_reboot>
  <devices>
    <emulator>/usr/bin/qemu-kvm</emulator>
    <disk type="file" device="disk">
      <driver name="qemu" type="qcow2"/>
      <source file="/var/lib/libvirt/images/centos-slave-3.qcow2"/>
      <target dev="vda" bus="virtio"/>
    </disk>
    <disk type="file" device="cdrom">
      <driver name="qemu" type="raw"/>
      <source file="/tmp/CentOS-7-x86_64-Minimal-1708.iso"/>
      <target dev="hda" bus="ide"/>
      <readonly/>
    </disk>
    <interface type="network">
      <source network='default' bridge='virbr0'/>
      <mac address="52:54:00:63:21:0c"/>
      <model type="virtio"/>
    </interface>
    <input type="tablet" bus="usb"/>
    <graphics type="vnc" port="-1"/>
    <console type="pty">
      <target type="serial"/>
    </console>
  </devices>
</domain>
